<Page x:Class="EkatBooks.PageRecoveryPassword"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EkatBooks"
      mc:Ignorable="d" 
      d:DesignHeight="200" d:DesignWidth="800"
      Title="PageRecoveryPassword" Background="White">

    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <TextBlock Text="Восстановление пароля" FontFamily="Times New Roman" FontSize="25"  Margin="0 20 0 0"/>
            <TextBox x:Name="inputTextBoxLoginNumber" MinWidth="200"  MinHeight="25" Margin="0 20 0 0" Text="Email"  Foreground="Gray" GotFocus="TextBox_GotFocusLoginNumber" LostFocus="TextBox_LostFocusLoginNumber" />
            <TextBox x:Name="inputTextBoxLogin" MinWidth="200"  MinHeight="25" Margin="0 10 0 0" Text="Логин"  Foreground="Gray" GotFocus="TextBox_GotFocusLogin" LostFocus="TextBox_LostFocusLogin" />
            <TextBox x:Name="inputTextBoxLoginNewPassword" MinWidth="200"  MinHeight="25" Margin="0 10 0 0" Text="Новый пароль"  Foreground="Gray" GotFocus=" TextBox_GotFocusNewPassword" LostFocus="TextBox_LostFocusLoginNewPassword" />









            <Button Content="Восстановить" Background="RoyalBlue" Foreground="White"  MinWidth="200"  MinHeight="25" Margin="0 10 0 0" Click="Button_ClickPagePassword"   />
            <Button Content="Войти" Background="White" Foreground="Black" BorderThickness="0.4" MinWidth="200"  MinHeight="25" Margin="0 10 0 0" Click="ReturnProfile" />
        </StackPanel>
    </Grid>
</Page>
